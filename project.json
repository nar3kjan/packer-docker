{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-1",
            "ami_name": "ubuntu-nginx-{{timestamp}}",
            "source_ami_filter": {
                "filters": {
                  "virtualization-type": "hvm",
                  "name": "ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*",
                  "root-device-type": "ebs"
                  },
                "owners": ["099720109477"],
                "most_recent": true
                },
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "assume_role": {
                "role_arn"    :  "arn:aws:iam::558664324013:instance-profile/ec2_acr",
                "session_name":  "SESSION_NAME",
                "external_id" :  "EXTERNAL_ID"
            }

        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "setup.sh"
        }
    ]
}